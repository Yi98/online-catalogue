<!doctype html>
<html class="no-js" lang="en">

<head>
  <meta charset="utf-8">

  <!--====== Title ======-->
  <title>Producto - Log In</title>

  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!--====== Favicon Icon ======-->
  <link rel="shortcut icon" href="../assets/images/favicon.png" type="image/png">


  <!--====== Font Awesome CSS ======-->
  <link rel="stylesheet" href="../assets/webfont/font-css/LineIcons.css">

  <!--====== Bootstrap CSS ======-->
  <link rel="stylesheet" href="../assets/css/bootstrap.min.css">

  <!--====== Default CSS ======-->
  <link rel="stylesheet" href="../assets/css/default.css">

  <!--====== Style CSS ======-->
  <link rel="stylesheet" href="../assets/css/style.css">

</head>

<body>
  <!--====== HEADER PART START ======-->

  <section class="header_area">
    <div class="header_navbar">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <nav class="navbar navbar-expand-lg">
              <a class="navbar-brand" href="/">
                <img src="../assets/images/logo.png" alt="Logo" width="150">
              </a>
            </nav> <!-- navbar -->
          </div>
        </div> <!-- row -->
      </div> <!-- container -->
    </div> <!-- header navbar -->

    <div id="home" class="header_hero_2 d-lg-flex">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-6 p-0 mx-auto">
            <img src="../assets/images/shop_tmp.jpg" class="img-fluid" alt="Responsive image">
            <h3 class="shop-name"><%= shopName %></h3>
          </div>
        </div>
        <div class="row">

          <div class="col-lg-6 mx-auto">
            <ul class="list-group list-group-flush">
              <% products.forEach(product => { %>
              <li class="list-group-item px-0">
                <div class="row">
                  <div class="col-lg-9 col-8">
                    <h5><%= product.name %></h5>
                    <p><%= product.description %></p>
                    <p class="pt-3">RM <%= product.price %></p>
                  </div>
                  <div class="col-lg-3 col-4">
                    <img src="../assets/images/cake_tmp.jpg" alt="menu-item">
                  </div>
                </div>
              </li>
              <% }) %>
            </ul>
          </div>
        </div> <!-- row -->
      </div> <!-- container -->
    </div> <!-- header hero -->

  </section>

  <!--====== HEADER PART ENDS ======-->

  <!--====== PART ENDS ======-->



  <!--====== Jquery js ======-->
  <script src="../assets/js/vendor/jquery-1.12.4.min.js"></script>
  <script src="../assets/js/vendor/modernizr-3.7.1.min.js"></script>

  <!--====== Bootstrap js ======-->
  <script src="../assets/js/popper.min.js"></script>
  <script src="../assets/js/bootstrap.min.js"></script>


  <!--====== Scrolling Nav js ======-->
  <script src="../assets/js/jquery.easing.min.js"></script>
  <script src="../assets/js/scrolling-nav.js"></script>

  <!--====== Main js ======-->
  <script src="../assets/js/main.js"></script>

</body>

</html>